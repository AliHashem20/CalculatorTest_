@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1>Calculator </h1>
<hr>
<form method="post">
    <div class="form-group">
        <label asp-for="userIputs.numbers"></label>
        <input asp-for="userIputs.numbers" placeholder="a * b">
        <span asp-validation-for="userIputs.numbers" class="text-danger"></span>
        =
        <input asp-for="userIputs.result" disabled>
        <span asp-validation-for="userIputs.result" class="text-danger"></span>
    </div> 
    <button type="submit" class="btn btn-success">Check Result</button>
    <a href="/index" class="btn btn-primary">Clear</a><br>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

</form>

